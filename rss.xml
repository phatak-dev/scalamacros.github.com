---
layout: nil
---
<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Scala Macros Updates</title>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/rss.xml" rel="self" type="application/rss+xml" />
    <description>Scala Macros Updates</description>
    <language>en-us</language>
    <pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %Z" }}</pubDate>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %Z" }}</lastBuildDate>

    {% for post in site.posts %}
      {% if post.categories contains "news" or post.categories contains "usecases" or post.categories contains "sips" %}
        <item>
          <title>{{ post.title }}</title>
          <link>{{ site.url }}{{ post.url }}</link>
          <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %Z" }}</pubDate>
          <author>{{ site.email }}</author>
          <guid>{{ site.url }}{{ post.id }}</guid>
          <description>{{ post.content | xml_escape }}</description>
        </item>
       {% endif %}
     {% endfor %}
  </channel>
</rss>